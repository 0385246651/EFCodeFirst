@model EFCodeFirst.Models.Product


<div class="col">
    <div class="card">
        <img src="https://picsum.photos/200" alt="@Model.ProductName" class="card-img-top" />
        <div class="card-body">
            <h5 class="card-title">
                @Model.ProductName
            </h5>
            <p class="card-text">
                @Model.Price
            </p>
            <p class="card-text">
                <small class="text-muted">@Model.Category.CategoryName</small>
            </p>
            <p class="card-text">
                <small class="text-muted">
                    @Model.Brand.BrandName
                </small>
            </p>
        </div>
    </div>
</div>